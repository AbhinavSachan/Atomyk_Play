<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_song_play_opl"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/primary_bg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:ignore="UnusedAttribute">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="2dp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/materialCardView_opl"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clipToPadding="false"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/cover_black"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/song_album_cover_queue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/empty"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music" />

            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/materialCardView_opl"
            app:layout_constraintEnd_toStartOf="@+id/playlist_itemOpt"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/song_name_opl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/song_name_e"
                android:textColor="@color/text_color"
                android:textSize="@dimen/d_16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/song_artist_name_opl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="@string/song_artist_e"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/d_14sp" />

                <TextView
                    android:id="@+id/song_length_opl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1.2"
                    android:gravity="end"
                    android:padding="2dp"
                    android:text="@string/song_dur_e"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/d_14sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/playlist_itemOpt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/empty"
            android:focusable="true"
            android:padding="6dp"
            android:src="@drawable/ic_option"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/drag_i_btn_playlist"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/drag_i_btn_playlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@string/empty"
            android:focusable="true"
            android:padding="6dp"
            android:src="@drawable/ic_drag_handle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>