<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/player_album_card_view"
            android:layout_width="280dp"
            android:layout_height="290dp"
            android:clickable="true"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="54dp"
            android:focusable="true"
            app:cardCornerRadius="25dp"
            app:cardElevation="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="280dp"
            android:layout_height="290dp"
            android:layout_marginBottom="54dp"
            android:alpha=".8"
            android:layout_marginTop="54dp"
            app:cardBackgroundColor="@color/soft_black"
            app:cardCornerRadius="360dp"
            app:cardElevation="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:text="kbajdjabkwjjsbjbakjwdbksabwbyasudabhwdbjabsd"
        android:textSize="50sp"
        android:textStyle="bold"

        android:layout_below="@+id/player_layout"
        android:textColor="@color/space_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>