<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_search_lyric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="@string/rename_pl"
        android:textColor="@color/text_color"
        android:textSize="@dimen/d_24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_playlist_rename_l"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_search_lyric"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="6dp"
        app:boxBackgroundColor="@color/tertiary_bg"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintTextColor="@color/accent_color_bg"
        app:placeholderTextColor="@color/hint_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_playlist_rename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:hint="@string/pl_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="120"
            android:maxLines="1"
            android:paddingTop="25dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_playlist_rename_l"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="6dp"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_cancel_rename_pl"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/accent_color_bg"
            android:text="@string/cancel"
            android:textColor="@color/play_icons_bg" />

        <Button
            android:id="@+id/btn_ok_rename_pl"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/accent_color_bg"
            android:text="@string/ok"
            android:textColor="@color/play_icons_bg" />
    </LinearLayout>

</RelativeLayout>