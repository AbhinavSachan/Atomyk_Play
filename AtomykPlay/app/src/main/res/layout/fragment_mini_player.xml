<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/primary_bg"
    android:id="@+id/mini_player_layout"
    tools:context=".function.PlayerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="10">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1.3"
            app:cardBackgroundColor="@color/primary_bg"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/song_album_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_music"
                android:contentDescription="@string/empty"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/song_name_e"
                android:textColor="@color/tertiary_bg"
                android:textSize="@dimen/d_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/song_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="2dp"
                android:singleLine="true"
                android:text="@string/song_artist_e"
                android:textColor="@color/tertiary_bg"
                android:textSize="@dimen/d_14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/more_option_i_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/empty"
            android:focusable="true"
            android:src="@drawable/ic_play" />

    </LinearLayout>


</RelativeLayout>