<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mini_player_layout"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/primary_bg"
    tools:context=".player.PlayerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_mini_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="10">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1.1"
                app:cardBackgroundColor="@color/primary_bg"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/song_album_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_music"
                    android:contentDescription="@string/empty"
                    android:scaleType="centerCrop" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="7"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/song_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/song_name_e"
                    android:textColor="@color/tertiary_bg"
                    android:textSize="@dimen/d_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/song_artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="@string/song_artist_e"
                    android:textColor="@color/tertiary_bg"
                    android:textSize="@dimen/d_14sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/more_option_i_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/empty"
                android:focusable="true"
                android:src="@drawable/ic_play" />

        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/mini_player_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="30"
            app:indicatorColor="@color/tertiary_bg"
            app:indicatorDirectionLinear="leftToRight"
            app:trackCornerRadius="2dp"
            app:trackColor="@color/primary_bg"
            app:trackThickness="3dp" />
    </LinearLayout>

</RelativeLayout>