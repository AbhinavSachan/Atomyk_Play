<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="20dp">

    <Spinner
        android:id="@+id/blacklist_already_added_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:prompt="@string/blacklisted_items"/>
    <LinearLayout
        android:id="@+id/blacklist_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/blacklist_already_added_list"
        android:weightSum="5">

    <TextView
        android:id="@+id/blacklist_directory_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/d_16sp"
        android:hint="Select Location"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        />
    <ImageView
        android:id="@+id/blacklist_open_directory_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_baseline_folder"
        android:layout_weight="1"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blacklist_linear_layout"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/blacklist_cancel_bt"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/accent_color_bg"
            android:text="@string/cancel"
            android:textColor="@color/play_icons_bg" />

        <Button
            android:id="@+id/blacklist_confirm_bt"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/accent_color_bg"
            android:text="@string/ok"
            android:textColor="@color/play_icons_bg" />
    </LinearLayout>

</RelativeLayout>