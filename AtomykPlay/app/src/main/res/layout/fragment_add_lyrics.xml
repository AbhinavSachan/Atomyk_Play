            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_lyrics_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                app:boxBackgroundColor="@color/secondary_bg"
                app:placeholderTextColor="@color/hint_color"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_lyrics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:lines="15"
                    android:hint="@string/your_lyrics"
                    android:imeOptions="normal"
                    android:textAlignment="gravity"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/sub_text_grey" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:gravity="center"
