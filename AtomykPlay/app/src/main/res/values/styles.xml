<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DetailSheetDataText" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/sub_text_grey</item>
        <item name="android:textSize">@dimen/d_15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>
    <style name="DetailSheetTitleText" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/d_15sp</item>
    </style>

    <style name="App.Custom.Title" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="FadeAnimationDark">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FadeAnimationLight">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>